<h2><%= @cocktail.name %></h2>
<p><%= @cocktail.description %></p>
<%= link_to "", edit_cocktail_path, class:"fas fa-edit" %>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">
      <%= dose.ingredient.name.capitalize %> - <%= dose.description %>
      <%= link_to "", edit_dose_path(dose), class:"fas fa-edit" %>
      <%= link_to "", dose_path(dose), method: :delete, data: { confirm: "Are you sure ?" }, class:"fas fa-trash-alt" %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-warning" %>
<%= link_to "Back to cocktails", root_path, class: "btn btn-primary" %>
